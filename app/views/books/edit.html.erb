<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
  	<h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<%= f.submit 'update book' %>
<% end %>

<%=link_to "show", book_path(@book) %>|<%= link_to "back", books_path %>